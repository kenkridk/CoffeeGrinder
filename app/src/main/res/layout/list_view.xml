<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/mainContainer">

    <RelativeLayout
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:id="@+id/rightContainer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="50sp"
            android:layout_height="80sp"
            android:text="Mute"
            android:background="@color/material_blue_grey_800"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/buttomMute"
            android:textSize="10sp"
            >

        </Button>
        <Button
            android:textSize="10sp"
            android:layout_width="50sp"
            android:layout_height="80sp"
            android:text="Remove"
            android:textColor="#ffffff"
            android:background="#604556"
            android:layout_alignParentRight="true"
            android:id="@+id/buttonRemove">

        </Button>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/leftContainer"
        android:background="@color/background_material_light"
        >

        <ImageView
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demoTitle"
            android:text="Large text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demoDescription"
            android:text="Medium text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/demoTitle"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>
