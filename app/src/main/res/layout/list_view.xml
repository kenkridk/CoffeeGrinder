<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:id="@+id/mainContainer">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/rightContainer"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        >

        <ToggleButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="Mute"
            android:background="@color/material_blue_grey_800"
            android:textColor="#ffffff"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/toggleButtonMute"
            android:textSize="10dp"
            >

        </ToggleButton>
        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="6dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:textColor="#ffffff"
            android:background="@mipmap/remove_icon"
            android:layout_alignParentRight="true"
            android:id="@+id/imageViewRemove">

        </ImageView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/leftContainer"
        android:background="@color/background_material_light"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demoTitle"
            android:text="Large text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/demoDescription"
            android:text="Medium text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/demoTitle"
            android:layout_toRightOf="@+id/imageView"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</RelativeLayout>
