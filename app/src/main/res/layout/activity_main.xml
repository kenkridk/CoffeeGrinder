<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonViewCoffeeMachines"
        android:background="#8f6020"
        android:textColor="#ffffff"
        android:text="@string/buttonViewCoffeeMachinesText"
        android:layout_weight="1"
        android:textSize="30dp">
    </Button>

    <Button
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/buttonViewSettings"
        android:background="#8f0020"
        android:textColor="#ffffff"
        android:text="@string/buttonViewSettingsText"
        android:layout_below="@+id/buttonViewCoffeeMachines"
        android:layout_marginTop="20dp"
        android:textSize="30dp">
    </Button>

</LinearLayout>
