<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dk.au.teamawesome.promulgate.activities.SettingsActivity">

    <TextView
        android:id="@+id/textViewSettingsTitle"
        android:text="@string/textViewSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ToggleButton
        android:id="@+id/buttonSettingsMuteAll"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:textOn="@string/settingsMuteAllButtonOnText"
        android:textOff="@string/settingsMuteAllButtonOffText"
        android:textColor="#ffffff"
        android:background="#f22233"
        android:onClick="muteAllToggle"
        android:layout_below="@+id/textViewSettingsTitle"/>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/settingsSetRoutingServerButton"
        android:textColor="#ffffff"
        android:background="#0000ff"
        android:alpha="0.7"
        android:layout_below="@+id/buttonSettingsMuteAll"/>

</RelativeLayout>
