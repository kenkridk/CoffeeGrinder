<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kenneth.coffeegrinder.SettingsActivity"
    >

    <TextView
        android:text="@string/textViewSettingsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewSettingsTitle"/>

    <Button
        android:layout_below="@+id/textViewSettingsTitle"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Mute all"
        android:textColor="#ffffff"
        android:background="#f22233"
        android:id="@+id/buttonSettingsMuteAll">
    </Button>

    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/buttonSettingsMuteAll"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Set routing server IP"
        android:textColor="#ffffff"
        android:background="#0000ff"
        android:alpha="0.7">
    </Button>


</RelativeLayout>
